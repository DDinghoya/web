---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";

import { promises as fs } from "fs";
import path from "path";

let donators;

async function fetchData() {
  const filePath = path.join(process.cwd(), "public", "json", "donators.json");
  const fileContents = await fs.readFile(filePath, "utf8");
  const jsonData = JSON.parse(fileContents);
  return jsonData.donators.donator;
}

donators = await fetchData();

const tiers = [
  {
    id: 1,
    name: "Violet",
    href: "https://buy.stripe.com/8wMdRF25ig3k1ry3cc",
    icon: "/img/tier_1.webp",
    color: "#8cb727",
    thanksKey: "donate.thanks-tier-1",
    thanksFallback: "Thanks for supporting us at the Violet level!",
    infoKey: "donate.info-tier-1",
    infoFallback: `Get access to the <b><span class="discord"></span> donators channel</b>, as well as <b><span class="globe"></span> recognition on our website</b>!`,
    subKey: "donate.sub",
    subFallback: `Subscribe for <br /> per month`,
    price: 2
  },
  {
    id: 2,
    name: "Lilac",
    href: "https://buy.stripe.com/aEUdRFbFS18qb28cMN",
    icon: "/img/tier_2.webp",
    color: "rgb(82, 143, 147)",
    thanksKey: "donate.thanks-tier-2",
    thanksFallback: "Thank you for choosing the Lilac tier!",
    infoKey: "donate.info-tier-2",
    infoFallback: `Have your very own <b><span class="film"></span> movie poster</b> inside Wii Room, <b><span class="utensils"></span> restaurant</b> in Food Channel, <b>plus all Violet perks</b>!`,
    subKey: "donate.sub",
    subFallback: `Subscribe for <br /> per month`,
    price: 5
  },
  {
    id: 3,
    name: "Tulip",
    href: "https://buy.stripe.com/eVa7thcJW8AS8U05km",
    icon: "/img/tier_3.webp",
    color: "rgb(160, 100, 186)",
    thanksKey: "donate.thanks-tier-3",
    thanksFallback: "Thanks for supporting at Tulip level!",
    infoKey: "donate.info-tier-3",
    infoFallback: `Own a <b><span class="user"></span> Mii</b> in Wii Room, access exclusive sneak peaks on the <b><span class="discord"></span> Tester Discord</b>, <b>plus all Lilac perks</b>!`,
    subKey: "donate.sub",
    subFallback: `Subscribe for <br /> per month`,
    price: 10
  },
  {
    id: 4,
    name: "Rose",
    href: "https://buy.stripe.com/28o7th8tG4kC8U0bIL",
    icon: "/img/tier_4.webp",
    color: "rgb(113, 185, 103)",
    thanksKey: "donate.thanks-tier-4",
    thanksFallback: "Youâ€™re amazing at the Rose tier!",
    infoKey: "donate.info-tier-4",
    infoFallback: `Create your own <b><span class="milestone"></span> Room</b> in Wii Room, <b>plus all Tulip perks</b>!`,
    subKey: "donate.sub",
    subFallback: `Subscribe for <br /> per month`,
    price: 20
  }
];
---

<div class="build">
  <div class="build-holder">
    <h1 class="title">
      <Trans i18nKey="donate.title">
        Made possible by users like <b class="color">you</b>
      </Trans>
    </h1>
    <h2 class="subtitle-main">
      <Trans i18nKey="donate.subtitle">
        <b style="font-family:Rubik;">WiiLink</b> is funded publicly by our <i
          class="color">users</i
        > and <i class="color">sponsors</i>. <b class="color"
          >To help our running costs, please consider donating!</b
        >
      </Trans>
    </h2>
    <div class="tiers-holder">
      <div class="tiers">
        {
          tiers.map(tier => (
            <div class={`build-square tier-${tier.id}`} key={tier.id}>
              <a
                href={tier.href}
                aria-label={`${tier.name} Donation Tier Link`}
                style="height:100%; display:flex; flex-direction:column; justify-content:space-between; text-decoration: none;">
                <div style="display:flex; flex-direction:column; justify-content:center; gap:8px;">
                  <div
                    class="mobile-gap"
                    style="display:flex; gap:8px; align-items:center;">
                    <img
                      src={tier.icon}
                      alt={`${tier.name} Tier`}
                      class="smalltierimg"
                      style="width:60px; display:none;"
                    />
                    <h2 style="font-family:gilroy; margin-right:10px;">
                      {tier.name}
                    </h2>
                    <hr style="flex:3; border:none; border-top:2px solid var(--border-color);" />
                    <p style="flex:2; text-align:right; margin:0;">
                      {t(tier.thanksKey, { defaultValue: tier.thanksFallback })}
                    </p>
                  </div>
                  <img
                    src={tier.icon}
                    alt={`${tier.name} Tier`}
                    style="margin:18px auto 0; width:150px; position:relative;"
                  />
                </div>
                <div>
                  <h5 style="margin-top:50px; margin-bottom:30px; opacity:0.8;">
                    <Trans
                      i18nKey={tier.infoKey}
                      set:html={tier.infoFallback}
                    />
                  </h5>
                  <button
                    class="btn"
                    style={`background-color:${tier.color}; width:100%; display:flex; gap:8px; align-items:center; justify-content:center; text-align:right !important;`}>
                    <Trans i18nKey={tier.subKey} set:html={tier.subFallback} />
                    <b style="font-size:50px">${tier.price}</b>
                  </button>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </div>
    <div class="youtube-member-callout">
      <div class="callout-content">
        <div class="callout-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136C4.495 20.455 12 20.455 12 20.455s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
            ></path>
          </svg>
        </div>
        <div class="callout-text">
          <h3>Want exclusive content access?</h3>
          <p>
            Get <strong>sneak peeks</strong> at our content, watch <strong
              >pilot episodes</strong
            >, and support us directly!
          </p>
        </div>
      </div>
      <a
        href="https://www.youtube.com/@WiiLink/join"
        target="_blank"
        class="youtube-member-button"
        rel="noopener noreferrer"
        aria-label="Become a YouTube Member">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path
            d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136C4.495 20.455 12 20.455 12 20.455s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
          ></path>
        </svg>
        Become a Member
      </a>
    </div>
    <div class="donator-holder">
      <h2
        style="top:50%; left:50px; width:250px; transform:translate(0, -50%); text-align:left; font-size: 30px; z-index: 1; position:relative;"
        class="subtitle">
        <Trans i18nKey="donate.donators">
          ...and join all these <b class="color">cool people</b>
        </Trans>
      </h2>
      <div class="slider">
        <div id="donators">
          {
            donators.map(donator => (
              <div class="donator">
                <h2>{donator.name}</h2>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <h3
      style="top:40px; margin-bottom:80px; width:100%; opacity:0.5; text-align:right; font-size: 15px; position:relative;">
      <Trans i18nKey="donate.powered">Powered by</Trans>
      <img
        alt="Stripe Logo"
        loading="lazy"
        class="stripe-logo"
        src="/img/stripe_logo.webp"
        style="transform:translate(0, -2px);"
        height="30px"
      />
    </h3>
  </div>
</div>

<style>
  .build-holder {
    left: 50%;
    transform: translate(-50%, 20px);
    width: 95%;
    max-width: 1500px;
    padding-top: 30px;
    position: relative;
  }
  .build-square {
    width: 95%;
    box-shadow: 0px 5px 10px #00000020;
    background-color: var(--bg-color-primary);
    border: 2px solid rgb(255, 240, 240);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 50px;
    padding: 15px;
    transition: 0.1s;
    z-index: 1;
    position: relative;
  }
  .slider::before {
    background: linear-gradient(
      to right,
      var(--bg-color) 40%,
      rgba(255, 255, 255, 0) 100%
    );
    content: "";
    height: 100%;
    position: absolute;
    width: 30%;
    z-index: 2;
  }

  button l,
  button b {
    color: white !important;
  }
  .donator-holder {
    top: 20px;
    height: 100px;
    max-width: 1500px;
    border-radius: 16px;
    overflow: hidden;
    position: relative;
  }
  .slider {
    top: -35px;
    height: 150px;
    margin: auto;
    border-radius: 8px;
    z-index: 0;
    width: 1500px;
    overflow: hidden;
    position: absolute;
  }

  .slider::after {
    right: 0;
    top: 0;
    transform: rotateZ(180deg);
  }
  #donators {
    display: flex;
    flex-direction: row;
    position: relative;
    animation: scroll 80s linear infinite;
  }
  .donator {
    top: 20px;
    height: 100px;
    min-width: 300px;
    background-color: var(--bg-color-secondary);
    border-radius: 16px;
    padding-right: 30px;
    margin: 15px;
    margin-right: 0px;
    position: relative;
  }

  .donator-holder h2 {
    top: 50%;
    transform: translate(0, -50%);
    text-align: center;
    left: 20px;
    font-family: Gilroy;
    position: relative;
  }
  .build-square:hover {
    box-shadow: 0px 5px 15px #7d7d7d20;
    background-color: var(--bg-color-secondary);
    transition: 0.1s;
  }
  .build-square:active {
    transform: scale(0.98);
    transition: 0.2s;
  }
  .tier-1 {
    border-radius: 16px 8px 8px 16px;
    background-size: cover;
    border: 2px solid rgb(228, 255, 169);
  }
  .tier-2 {
    border-radius: 8px;
    background-size: cover;
    border: 2px solid rgb(148, 248, 255);
  }
  .tier-3 {
    border-radius: 8px;
    background-size: cover;
    border: 2px solid rgb(238, 206, 252);
  }
  .tier-4 {
    border-radius: 8px 16px 16px 8px;
    background-size: cover;
    border: 2px solid rgb(205, 213, 204);
  }
  .tiers-holder {
    width: 100%;
    height: auto;
    border-radius: 16px;
    overflow: hidden;
    position: relative;
  }
  .tiers {
    left: 50%;
    transform: translate(-50%, 0);
    display: flex;
    flex-direction: row;
    scroll-snap-type: x mandatory;
    overflow-x: scroll;
    gap: 16px;
    -ms-overflow-style: none;
    scrollbar-width: none;
    overflow-x: scroll;
    position: relative;
  }
  .tiers::-webkit-scrollbar {
    display: none;
  }
  .tiers > * {
    scroll-snap-align: start;
  }
  .build {
    top: 100px;
    position: relative;
  }
  .subtitle-main {
    text-align: center;
    margin-bottom: 20px;
    font-size: 25px;
  }
  .title {
    text-align: center;
    width: 100%;
    margin-bottom: 15px;
    font-size: 50px;
    font-family: Gilroy;
    position: relative;
  }

  @media only screen and (max-width: 1000px) {
    .build-square {
      width: 100%;
      height: auto;
    }
    .tiers-holder {
      left: 50%;
      transform: translate(-50%, 0);
      width: 98%;
    }
    .smalltierimg {
      display: block !important;
    }
    .build-holder img:nth-child(2),
    .build-holder hr {
      display: none !important;
    }
    .mobile-gap {
      gap: 18px !important;
    }
    h5 {
      margin-top: 28px !important;
    }
    .build-square:nth-child(1) {
      border-radius: 16px 16px 8px 8px;
    }
    .build-square:nth-child(4) {
      border-radius: 8px 8px 16px 16px;
    }
    .tiers {
      display: flex;
      flex-direction: column;
    }
    .slider::before {
      background: none;
    }
    .title {
      font-size: 40px;
      text-align: left;
      left: 20px;
      width: 90%;
    }
    .subtitle-main {
      font-size: 25px;
      text-align: left;
      margin-left: 20px;
      width: 90%;
    }
    .subtitle {
      display: none;
    }
    .youtube-member-callout {
      flex-direction: column;
    }
    .youtube-member-button {
      margin-top: 20px;
    }
  }

  .discord {
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-bottom: -5px;
    background-color: currentColor;
    --svg: url("/icons/discord.svg");
    -webkit-mask-image: var(--svg);
    mask-image: var(--svg);
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-size: 100% 100%;
  }
</style>

<style is:global>
  .film {
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-bottom: -5px;
    background-color: currentColor;
    --svg: url("/icons/film.svg");
    -webkit-mask-image: var(--svg);
    mask-image: var(--svg);
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-size: 100% 100%;
  }

  .utensils {
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-bottom: -5px;
    background-color: currentColor;
    --svg: url("/icons/utensils.svg");
    -webkit-mask-image: var(--svg);
    mask-image: var(--svg);
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-size: 100% 100%;
  }

  .milestone {
    display: inline-block;
    width: 22px;
    height: 22px;
    margin-bottom: -5px;
    background-color: currentColor;
    --svg: url("/icons/milestone.svg");
    -webkit-mask-image: var(--svg);
    mask-image: var(--svg);
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
    mask-size: 100% 100%;
  }

  .youtube-member-callout {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px;
    margin: 30px 0;
    background: linear-gradient(135deg, #ff000012 0%, #ff000025 100%);
    border: 2px solid #ff000040;
    border-radius: 20px;
    position: relative;
  }

  .callout-content {
    display: flex;
    align-items: center;
    gap: 20px;
    flex: 1;
  }

  .callout-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, #ff0000, #cc0000);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .callout-text h3 {
    margin: 0 0 8px 0;
    font-size: 22px;
    font-weight: 700;
    color: var(--color);
    font-family: "Gilroy", sans-serif;
  }

  .callout-text p {
    margin: 0;
    font-size: 16px;
    color: var(--color);
    opacity: 0.8;
    line-height: 1.4;
  }

  .callout-text strong {
    color: #e83939;
    font-weight: 600;
  }

  .youtube-member-button {
    background: linear-gradient(135deg, #ff0000, #cc0000);
    color: white !important;
    padding: 16px 24px;
    border-radius: 12px;
    font-weight: 700;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 16px;
    white-space: nowrap;
  }

  .youtube-member-button:hover {
    background: linear-gradient(135deg, #e60000, #b30000);
    color: white !important;
  }

  .youtube-member-button:active {
    box-shadow: 0 2px 8px rgba(255, 0, 0, 0.3);
  }

  html.dark .callout-text p {
    opacity: 0.9;
  }

  @media only screen and (max-width: 768px) {
    .youtube-member-callout {
      flex-direction: column;
      text-align: center;
      padding: 20px;
      gap: 20px;
    }

    .callout-content {
      flex-direction: column;
      text-align: center;
      gap: 16px;
    }

    .callout-icon {
      width: 56px;
      height: 56px;
    }

    .callout-text h3 {
      font-size: 20px;
    }

    .callout-text p {
      font-size: 15px;
    }

    .youtube-member-button {
      width: 100%;
      justify-content: center;
      padding: 18px 24px;
    }
  }

  @media only screen and (max-width: 480px) {
    .youtube-member-callout {
      margin: 20px 0;
      padding: 16px;
    }

    .callout-icon {
      width: 48px;
      height: 48px;
    }

    .callout-text h3 {
      font-size: 18px;
    }

    .callout-text p {
      font-size: 14px;
    }
  }
</style>
