---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import FormattedDate from "../components/FormattedDate.astro";
import { getCollection } from "astro:content";
import i18next, { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";
import { Icon } from "astro-icon/components";

const url = new URL(Astro.request.url);
let currentPath = url.pathname;

let posts = await getCollection("guide");
type Props = CollectionEntry<"guide">["data"];
posts = posts.slice(3);
posts.sort((a, b) => (`/guide/${a.slug}/` === currentPath ? -1 : 1));
const { title, description, icon, pubDate, updatedDate, heroImage } =
  Astro.props;
---

<Layout
  title={`WiiLink - ${t("guidePost.name")} (${title})`}
  description={`${title} - ${description}`}
  image="/img/Guide_embed.webp">
  <html lang={i18next.language}>
    <Header />
    <div
      class="holder"
      style="width:95%; height:175px; left:50%; transform:translate(-50%, 30px); display:flex; justify-content:space-between; display:none; z-index:100; position:relative; margin-top:50px;">
      <a href="/" class="logohold"
        ><img
          src="/img/logo.webp"
          class="logo"
          style="width:140px !important;"
        /></a
      >
      <button
        class="btn dropdownbtn btn-black-50"
        style="z-index:1000; position:relative; height:50%;"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasTop"
        aria-controls="offcanvasTop"
        ><Icon
          style="font-size:30px; filter:opacity(0.9);"
          name="lucide:menu" /></button
      >
    </div>
    <div class="flex">
      <div class="guidehold">
        <div id="container1"></div>
        <div id="google_translate_element" style="z-index:100;"></div>
        <div
          class="offcanvas-body"
          style="overflow-y:visible; position:relative;">
          <h4
            style="top:30px; left:0px; font-family: Gilroy; z-index: 100; position:relative;">
            {t("guidePost.whereTo")}
          </h4>
          <div>
            <script
              is:inline
              type="text/javascript"
              src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"
            ></script>
            <div class="sidebarcontent">
              <div class="post" style="border-radius: 8px 8px 4px 4px;">
                <a href={`/guide/install/`}>
                  <img class="mainimg" src="../../img/guidebg-1.webp" />
                  <div
                    class="title-main"
                    style="color:white !important; text-align: left; font-size:20px; font-family:Gilroy;">
                    <Icon
                      name="lucide:download"
                      style="margin-right:5px; margin-bottom:3px;"
                     />
                    {t("guidePost.installGuide")}
                  </div>
                </a>
              </div>
              <div class="post" style="border-radius: 4px;">
                <a href={`/guide/problemsolving/`}>
                  <img class="mainimg" src="../../img/guidebg-3.webp" />
                  <div
                    class="title-main"
                    style="color:white !important; text-align: left; font-size:20px; font-family:Gilroy;">
                    <Icon
                      name="lucide:circle-alert"
                      style="margin-right:5px; margin-bottom:3px;"
                     />
                    {t("guidePost.problemSolving")}
                  </div>
                </a>
              </div>
              <div class="post" style="border-radius: 4px 4px 8px 8px;">
                <a href={`/guide/faq/`}>
                  <img class="mainimg" src="../../img/guidebg-2.webp" />
                  <div
                    class="title-main"
                    style="color:white !important; text-align: left; font-size:20px; font-family:Gilroy;">
                    <Icon
                      name="lucide:circle-help"
                      style="margin-right:5px; margin-bottom:3px;"
                     />
                    {t("guidePost.faq")}
                  </div>
                </a>
              </div>
            </div>
            <div class="sidebarcontent" style="margin-bottom:40px;">
              {
                posts.map((post, index) => (
                  <>
                    {index === 0 && currentPath !== `/guide/${post.slug}/` && (
                      <hr style="transform:translate(0, 8px); border-top: 2px solid var(--border-color);" />
                    )}
                    <div
                      class={`post2 ${currentPath === `/guide/${post.slug}/` ? "active" : ""}`}>
                      <a href={`/guide/${post.slug}/`}>
                        <div class="title2">
                          <Icon name={post.data.icon} style="margin-right:8px; margin-bottom:3px;" />{" "}
                          {post.data.title}
                        </div>
                      </a>
                    </div>
                    {index === 0 && currentPath === `/guide/${post.slug}/` && (
                      <hr style="transform:translate(0, 8px); border-top: 2px solid var(--border-color);" />
                    )}
                  </>
                ))
              }
            </div>

            <a href="https://wii.hacks.guide"
              ><div class="wiiguide">
                <Trans i18nKey="guidePost.visitWiiHacks">
                  Visit wii.hacks.guide
                </Trans>
              </div></a
            >
          </div>
        </div>
      </div>
      <div class="guideholder">
        <div class="dateRemove">
          <FormattedDate pre="Last updated on: " date={pubDate} />
        </div>
        <img class="topImage" id="parallax" src={heroImage} />
        <div class="title">
          <Icon name={icon} style="margin-right:18px; margin-bottom:10px;" />
          {title}
        </div>
        <div class="guidecontent" id="container2">
          <slot />
        </div>
        <div>
          <Footer
            top="top:17px; border-radius:8px 8px 0px 0px; overflow:hidden;"
          />
        </div>
      </div>
    </div>
  </html>
</Layout>

<script is:inline>
  window.onload = function () {
    const container1 = document.getElementById("container1");
    const container2 = document.getElementById("container2");
    const movableDiv = document.querySelector(".toc-post");

    if (movableDiv.parentElement === container1) {
      container2.appendChild(movableDiv);
    } else {
      container1.appendChild(movableDiv);
    }
  };

  if (window.matchMedia("(max-width: 1000px)").matches) {
    let guidehold = document.querySelector(".guidehold");
    guidehold.style.display = "block";
    let offcanvasBody = document.querySelector(".holdcontainer");
    offcanvasBody.innerHTML +=
      "<a href='#skip' style='width:100%; padding:8px; border-radius:4px; background-color: var(--bg-color-tertiary); transform:translate(0, -18px); text-decoration:none; text-align:center; display:block; position:relative;'><i class='fa-solid fa-arrow-down'></i> Skip to links</a>";
    offcanvasBody.appendChild(guidehold);
    offcanvasBody.innerHTML +=
      "<hr id='skip' style='border-top: 2px solid var(--border-color);'>";
  }

  document.addEventListener("DOMContentLoaded", function () {
    let guideholder = document.querySelector(".guideholder");
    if (guideholder) {
      guideholder.addEventListener("scroll", function () {
        let parallax = document.getElementById("parallax");
        if (parallax) {
          let offset = guideholder.scrollTop;
          parallax.style.transform = "translateY(" + offset * 0.5 + "px)";
        }
      });
    }
  });

  var flex = document.getElementsByClassName("flex")[0];
  const observer = new MutationObserver(function (mutations, observer) {
    flex.style.height = "";
  });
  observer.observe(flex, {
    attributes: true,
    attributeFilter: ["style"]
  });
</script>

<script is:inline type="text/javascript">
  function googleTranslateElementInit() {
    new google.translate.TranslateElement(
      { pageLanguage: "en" },
      "google_translate_element"
    );
  }
</script>

<style>
  html {
    top: -150px;
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  body {
    top: 0;
    left: 0;
    width: 100%;
    height: 115%;
    position: absolute;
  }

  img {
    width: 500px;
  }

  .title {
    left: 50%;
    transform: translate(-50%, 0);
    width: 100%;
    font-size: 45px;
    font-family: Gilroy;
    z-index: 100;
    top: 80px;
    text-align: center;
    position: relative;
  }

  .image {
    width: 100%;
    height: 100%;
    z-index: 0;
    position: absolute;
  }

  .topImage {
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0.3;
    pointer-events: none;
    -webkit-mask-image: linear-gradient(
      180deg,
      rgba(0, 0, 0, 1) 0%,
      transparent 58%
    );
    position: absolute;
  }

  .head {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
  }

  .fade2 {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: linear-gradient(
      0deg,
      rgba(24, 24, 24, 1) 70%,
      rgba(0, 212, 255, 0) 100%
    );
    z-index: 1;
    position: absolute;
  }

  body {
    overflow: hidden;
  }

  body > .skiptranslate {
    display: none;
  }

  .guidecontent {
    width: 95%;
    left: 50%;
    scroll-behavior: smooth;
    transform: translate(-50%, 0);
    position: relative;
    font-family: Cafe;
    margin-top: 120px;
    text-align: justify;
    animation-name: fadeup;
    animation-duration: 0.5s;
    animation-fill-mode: forwards;
  }

  .flex {
    bottom: 0;
    left: 50%;
    width: 98%;
    height: calc(100% - 120px) !important;
    display: flex;
    transform: translate(-50%, 0);
    align-items: flex-end;
    gap: 18px;
    z-index: 0;
    justify-content: center;
    flex-wrap: nowrap;
    position: fixed;
  }

  .guidehold {
    width: 380px;
    height: 100%;
    border-radius: 8px;
    -ms-overflow-style: none;
    scrollbar-width: none;
    overflow: scroll;
    overflow-x: hidden;
  }

  .holder::-webkit-scrollbar {
    display: none;
  }

  .guideholder {
    width: 90%;
    height: 100%;
    max-width: 1200px;
    top: 130px;
    border: 0px solid rgba(255, 0, 0, 0.055) !important;
    background-color: var(--bg-color-secondary) !important;
    backdrop-filter: blur(8px);
    perspective: 1px;
    scroll-behavior: smooth;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    z-index: 1;
    resize: horizontal;
    overflow: scroll;
    overflow-x: hidden;
  }

  .guideholder::-webkit-scrollbar {
    display: none;
  }

  .holder::-webkit-scrollbar {
    display: none;
  }

  @keyframes fadeup {
    0% {
      opacity: 0;
      transform: translate(-50%, 28px);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, 0px);
    }
  }

  .mainimg {
    transform: translate(-15px, -15px);
    width: 100%;
    scale: 110%;
    transform-origin: center;
    transition: 0.5s;
    background-size: cover;
    position: absolute;
  }

  a {
    text-decoration: none;
  }

  .post:hover .mainimg {
    filter: blur(3px) brightness(0.7);
    scale: 105%;
    transition: 0.3s;
  }

  .post:active,
  .post2:active {
    scale: 97%;
    transition: 0.2s;
  }

  .offcanvas {
    margin: 8px;
    border-radius: 18px;
    box-shadow: 0px 0px 20px #00000040;
    overflow: hidden;
    height: calc(100% - 18px);
  }

  .title-main {
    font-family:
      systemui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: white;
    transition: 0.3s;
    z-index: 100;
    position: relative;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }

  .title2 {
    font-family:
      systemui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: #121212a2;
    transition: 0.3s;
    z-index: 100;
    position: relative;
  }

  .title2:hover {
    color: #121212;
    transition: 0.3s;
  }

  .btn {
    left: 0;
    z-index: 1000;
    position: absolute;
  }

  .sidebarholder {
    width: 17%;
    height: 87%;
    bottom: 0;
    left: 8%;
    border-radius: 8px;
    position: absolute;
    overflow: scroll;
  }

  .fade-sidebar {
    top: 0;
    left: 0;
    width: 530px;
    height: 80px;
    background: rgb(255, 255, 255);
    background: linear-gradient(
      180deg,
      rgb(255, 255, 255) 0%,
      rgba(0, 0, 0, 0) 100%
    );
    z-index: 100;
    position: absolute;
  }

  .sidebarcontent {
    top: 38px;
    font-family: Cafe;
    font-size: 15px;
    margin-bottom: 8px;
    z-index: 0;
    position: relative;
  }

  .post {
    width: 100%;
    height: 60px;
    padding: 15px;
    overflow: hidden;
    border-radius: 8px;
    margin-bottom: 6px;
    transition: 0.2s;
    position: relative;
  }

  .post2 {
    width: 100%;
    padding: 10px 10px;
    border-radius: 8px;
    margin-bottom: 8px;
    overflow: hidden;
    transition: 0.2s;
    position: relative;
  }

  .post2.active {
    padding: 20px 18px;
    background-color: var(--bg-color-tertiary);
    border-radius: 8px;
    transition: 0.2s;
  }

  .post2.active::after,
  .post.active::after {
    right: 20px; /* Move the arrow inside the element on hover */
    opacity: 1;
  }

  .post2::after,
  .post::after {
    content: "\f061"; /* FontAwesome right arrow */
    font-family: "Font Awesome 5 Free";
    font-weight: 900;
    top: 50%;
    transform: translate(0, -50%);
    position: absolute;
    right: 40px; /* Start from outside of the element */
    opacity: 0;
    transition: all 0.5s ease;
  }

  .post2:hover::after,
  .post:hover::after {
    right: 20px; /* Move the arrow inside the element on hover */
    opacity: 1;
  }

  .post2:hover {
    padding: 20px 18px;
    background-color: var(--bg-color-secondary);
    transition: 0.2s;
  }

  i {
    transition: 0.2s;
  }

  .post2:hover i {
    transform: scale(1.2) rotate(5deg);
    transition: 0.2s;
  }

  .wiiguide {
    top: 18px;
    width: 100%;
    background-color: rgb(79, 79, 211);
    border-radius: 8px;
    font-family: Gilroy;
    font-size: 25px;
    text-align: center;
    color: white !important;
    padding-top: 20px;
    padding-bottom: 20px;
    position: relative;
    transition: 0.2s;
  }

  .color {
    background: #0d6efd;
    background: AccentColor;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: brightness(150%);
  }

  .hover {
    display: none;
  }

  .wiiguide:hover {
    background-color: rgb(58, 58, 197);
    text-decoration: underline;
    transition: 0.2s;
  }

  @media (max-width: 1000px) {
    .flex {
      top: -40px;
      width: 100%;
      height: calc(100% + 12px);
      align-items: flex-start;
      position: relative;
      z-index: 0;
    }
    .guideholder {
      height: 100%;
      width: 100%;
      top: 0;
      border: 0px solid rgba(255, 0, 0, 0) !important;
      background-color: rgba(200, 200, 200, 0) !important;
      backdrop-filter: blur(0px);
      perspective: 0px;
      scroll-behavior: smooth;
      border-radius: 8px;
      z-index: 1;
      overflow: scroll;
      overflow-x: hidden;
    }
    .offcanvas-body {
      padding: 0px !important;
    }
    .guidehold {
      width: 100%;
      padding: 0px !important;
      overflow: hidden;
      display: none;
    }
    .wiiguide {
      display: none;
    }
    .topImage {
      display: none;
    }
    .holder {
      display: flex !important;
      position: fixed;
    }
    .dateRemove {
      display: none;
    }
    #togglebtn {
      display: none;
    }
    .guidecontent {
      margin-top: 168px;
    }
    .title {
      left: 50%;
      transform: translate(-50%, 0);
      width: 90%;
      font-size: 45px;
      font-family: Gilroy;
      z-index: 100;
      top: 120px;
      text-align: center;
      position: relative;
    }
  }
</style>
