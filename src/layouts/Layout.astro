<meta name="language" content="English" />
<meta name="revisit-after" content="12 days" />
<meta name="author" content="The WiiLink Team" />
<link
  rel="apple-touch-icon"
  sizes="180x180"
  href="/img/apple-touch-icon.webp"
/>
<link
  rel="icon"
  type="image/png"
  sizes="32x32"
  href="/img/favicon-32x32.webp"
/>
